extends ./layouts/main

block content
  header
    h3 Contact Us
  .contactUs
    h4 Send Us Your Questions

    form(
    class="formContactUs"
    role="form"
    action="/process?form=contactus"
    method="POST")

      input(type="hidden" name="_csrf" value="")

      .form-group
        label(for="formEmail" class="col-sm-2 control-label") Email
        .col-sm-4
          input(type="text" class="form-control" id="formEmail" name="email")

      .form-group
        label(for="formQuestion" class="col-sm-2 control-label") Question
        .col-sm-4
          input(type="text" class="form-control" id="formQuestion" name="question")

      .form-group
        .col-sm-4
          //-input(type="submit" class="btn btn-default")
          input(type="submit" class="btn btn-default" value="Submit")

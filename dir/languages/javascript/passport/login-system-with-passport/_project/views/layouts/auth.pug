doctype transitional
html

  include ../partials/head.pug

  body

    include ../partials/nav.pug

    .container

      if(success_msg)
      .row
        .col-lg-12
          .alert.alert-success= success_msg

      if(error_msg)
        .row
          .col-lg-12
            .alert.alert-danger= error_msg

      if(error)
        .row
          .col-lg-12
            .alert.alert-danger= error

      block content

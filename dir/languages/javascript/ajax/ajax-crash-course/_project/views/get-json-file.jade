extends ./layouts/default

block content

  h1
  small

  .jumbotron

    h3 #{title}
      small(class="text-muted") #{description}

    p(class="lead")
      button(id="button1" class="btn btn-primary btn-lg" role="button" style="margin-right:20px;") Get User
      button(id="button2" class="btn btn-primary btn-lg" role="button") Get Users

    hr(class="my-4")

    .row
      .col-sm-6
        h4 User
          blockquote(class="blockquote")
            #jsonUser.mb-0

      .col-sm-6
        h4 Users
          blockquote(class="blockquote")
            #jsonUsers.mb-0

  script(src="js/get-json-file.js")
